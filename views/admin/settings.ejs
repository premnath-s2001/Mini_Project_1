    <body class="bg-slate-300">
        <div class="min-h-full  flex items-center justify-center  py-12 px-4 sm:px-6 lg:px-8 " >
            <div class="max-w-md w-full space-y-8 bg-white border-solid px-8 py-12 border-2 border-white">
              <div>
                <div>
                  <!-- Website Logo -->
                  <a href="#" class="flex items-center md:px-20">
                    
                   
                  </a>
                </div>
                <h1 class="mt-3 text-center text-3xl font-extrabold text-gray-700">Reset Password</h1>
               
              </div>
              <form class="mt-8 space-y-6" action="/login" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                   
                        <div class="col-span-3 sm:col-span-2">
                          <label for="company-website" class="block text-sm font-medium text-gray-700"> Email id</label>
                          <div class="mt-1 flex rounded-md shadow-sm">
                            <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/456/456212.png" width="25px" height="25px" alt="demo"> </span>
                            <input type="text"  name="email" id="company-website" readonly="readonly" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="abc@gmail.com">
                          </div>
                        </div>
                     
                  <br>
                  <div class="col-span-3 sm:col-span-2">
                    <label for="company-website" class="block text-sm font-medium text-gray-700"> New Password </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/483/483408.png" width="25px" height="25px" alt="demo"> </span>
                      <input type="password"  name="password" id="company-website" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
                    </div>
                  </div>
                  <br>
                  <div class="col-span-3 sm:col-span-2">
                    <label for="company-website" class="block text-sm font-medium text-gray-700">Confirm Password </label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/7562/7562668.png" width="25px" height="25px" alt="demo"> </span>
                      <input type="password"  name="password" id="company-website" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
                    </div>
                  </div>
                </div>
          
                <!-- <div> -->
