<form action="/cart" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="productId" value="<%= product._id %>">
    <input type="number" name="pQuantity" style="width:50px" value="1" min="0.5" step="0.5"  id="" required>
    <button type="submit" style="background-color: rgb(50, 132, 255);border: 1px solid blue;color: white;">Add to Cart</button>
</form>