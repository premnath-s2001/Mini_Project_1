<div class="tab-content" id="tabs-tabContentJustify">
  <div class="tab-pane fade show active" id="tabs-homeJustify" role="tabpanel"
    aria-labelledby="tabs-home-tabJustify">
    <div class="  flex items-center justify-center  -py-8 px-4 sm:px-6 lg:px-8 " style="margin-top:-1%">
      <div  class=" w-full space-y-8  bg-gray-100 shadow-lg rounded-sm border border-gray-200 border-solid px-12 my-4 py-12 border-2 ">
        <div>
          <div>
            <!-- Website Logo -->
            <a href="#" class="flex items-center md:px-20">
              
             
            </a>
          </div>
          
          <h1 class="mt-3 text-center text-3xl font-extrabold text-gray-700"> <%= user? user.name : "Guest" %> </h1>
        
        </div>
        <form class="mt-8 space-y-6"  action="/profile" method="POST">
          <div class="grid grid-cols-2 gap-2">
            <div><input type="hidden" name="remember" value="true">
              <div class="rounded-md shadow-sm -space-y-px">
                 
                      <div class="col-span-3 sm:col-span-2">
                        <label for="company-website" class="block text-sm font-medium text-gray-700"> Email id</label>
                        <div class="mt-1 flex rounded-md shadow-sm">
                          <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/456/456212.png" width="25px" height="25px" alt="demo"> </span>
                          <input type="text" value="<%= user ? user.email : 'abc@gmail.com' %>" name="email" id="company-website" readonly="readonly" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                          </div>
                      </div>
                <br>
                
                <div class="col-span-3 sm:col-span-2">
                  <label for="company-website" class="block text-sm font-medium text-gray-700"> Mobile 1</label>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/126/126341.png" width="25px" height="25px" alt="demo"> </span>
                    <input type="tele" value="<%= user && user.mobile1 ? user.mobile1 : '' %>" name="mobile1" id="company-website" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" required>
                    </div>
                </div>
                <br>
                <div class="col-span-3 sm:col-span-2">
                  <label for="company-website" class="block text-sm font-medium text-gray-700">Mobile 2</label>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/1034/1034182.png" width="25px" height="25px" alt="demo"> </span>
                    <input type="tele" value="<%= user && user.mobile2 ? user.mobile2 : '' %>" name="mobile2" id="company-website" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                  </div>
                </div>
              </div></div>
            <!-- ... -->
            <div><input type="hidden" name="remember" value="true">
              <div class="rounded-md shadow-sm -space-y-px">
                 
                <!-- Address -->
                      <div class="col-span-3 sm:col-span-2">
                        <div class="col-span-3 sm:col-span-2">
                          <label for="company-website" class="block text-sm font-medium text-gray-700"> Address</label>
                          <div class="mt-1 flex rounded-md shadow-sm">
                            <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/1946/1946436.png" width="25px" height="25px" alt="demo"> </span>
                            <input type="text" name="address"
              class="
                form-control
                block
                w-full
                px-3
                py-1.5
                text-base
                font-normal
                text-gray-700
                bg-white bg-clip-padding
                border border-solid border-gray-300
                rounded
                transition
                ease-in-out
                m-0
                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none
              "
              id="exampleFormControlTextarea1"
              rows="5" value="<%= user && user.address ? user.address : '' %>">
                          </div>
                        </div>
                        <br>

                        <!-- Pin Code -->
                        <label for="company-website" class="block text-sm font-medium text-gray-700"> Pincode</label>
                        <div class="mt-1 flex rounded-md shadow-sm">
                          <span class="inline-flex items-center px-2 py-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> <img src="https://cdn-icons-png.flaticon.com/512/484/484167.png" width="25px" height="25px" alt="demo"> </span>
                          <input type="text" value="<%= user && user.pincode ? user.pincode : '' %>" name="pincode" id="company-website" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                        </div>
                      </div>
                   
                <br>
                <br>
                
              </div></div>
          </div>
          
  
    <br>
          <div class="flex justify-center">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button style="width: 200px;" type="submit" class="group relative w-1/2  py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                <!-- Heroicon name: solid/lock-closed -->
                
              </span>
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
